.tile
  transition 300ms ease-in-out
  transition-property transform
  transform-style: preserve-3d;
  //padding 5px 0px 0px 5px
  margin 5px 0px 0px 5px
  float left
  position relative
  box-sizing border-box

  .tile-face
    position absolute
    -webkit-backface-visibility: hidden;    
    transform-style: preserve-3d;
    width 100%
    height 100%
    border-radius 3px
    text-align center
    font-weight bold

  .tile-flag
    z-index 100  

  .tile-front
    background #ccc0b3

  .tile-flipped
    background #eee4da
    transform perspective(1000px) rotateY( 180deg )

  &.flipped
    transform perspective(0px) rotateY( 180deg )


//tile-100
.tile-100
  width 100px
  height 100px
  font-size 55px
  line-height 100px

//tile-50
.tile-50
  width 50px
  height 50px
  font-size 25px
  line-height 50px

//tile-30
.tile-30
  width 30px
  height 30px
  font-size 15px
  line-height 30px
