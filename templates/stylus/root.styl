// main
body,html
  background #faf8ef
  margin 0
  padding 0
  color #776e65
  font-family "Clear Sans", "Helvetica Neue", Arial, sans-serif;
  font-size 18px

.wrapper
  margin 80px auto
  
.cf
  &:after
    content ""
    display block
    clear both

.header
  text-align center

.game-container
  position relative
  margin 0px auto
  padding 0px 5px 5px 0px
  background #bbada0
  border-radius: 6px
  box-sizing border-box
  
  .message-container
    position absolute
    width 100%
    height 100%
    z-index 200
    text-align center
    line-height 180px
    background-color rgba(255,255,255,.60)

  .tile-container
    width 100%
    height 100%

.game-config
  p
    text-align center

  .error
    color #aa3939