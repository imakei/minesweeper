// main
body,html
  background #faf8ef
  margin 0
  padding 0
  color #776e65
  font-family "Clear Sans", "Helvetica Neue", Arial, sans-serif;
  font-size 18px

.wrapper
  margin 80px auto
  
.cf
  &:after
    content ""
    display block
    clear both

input
  font-family inherit
  font-size 100%
  font-style inherit;  
  font-weight inherit;  
  margin 0
  padding 0
  vertical-align baseline 
  border none

input[type='number']
  width 2.75em
  text-align right
  border-bottom 2px solid #bbada0
  background-color transparent
  color #776e65

.header
  text-align center

.game-container
  position relative
  margin 0px auto
  padding 0px 5px 5px 0px
  background #bbada0
  border-radius: 6px
  box-sizing border-box
  
  .message-container
    position absolute
    width 100%
    height 100%
    z-index 200
    text-align center
    line-height 180px
    background-color rgba(255,255,255,.60)
    
  .tile-container
    width 100%
    height 100%

.game-config
  p
    text-align center
    
    span
      margin-left 15px

  .error
    color #aa3939

.reset
  display inline-block
  background #8f7a66
  border-radius 3px
  padding 0 20px
  text-decoration: none
  color #f9f6f2
  height 40px
  line-height 42px
  cursor pointer
  margin-left 9px



















