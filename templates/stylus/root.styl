// main
body,html
  background #faf8ef
  margin 0
  padding 0
  color: #776e65;
  font-family: "Clear Sans", "Helvetica Neue", Arial, sans-serif;
  font-size: 18px;

.wrapper
  width 800px
  margin 100px auto
  
.cf
  &:after
    content ""
    display block
    clear both

.header
  text-align center

.game-container
  position relative
  margin 0px auto
  padding 0px 5px 5px 0px
  background #bbada0
  border-radius: 6px
  width 530px
  height 530px
  box-sizing border-box
  
  .message-container
    position absolute
    width 100%
    height 100%
    z-index 200
    text-align center
    line-height 530px
    background-color rgba(255,255,255,.35)

  .tile
    transition 300ms ease-in-out
    transition-property transform
    transform-style: preserve-3d;
    width 100px
    height 100px
    margin 5px 0px 0px 5px
    line-height 100px
    float left
    position relative

    .tile-face
      position absolute
      -webkit-backface-visibility: hidden;    
      transform-style: preserve-3d;
      width 100px
      height 100px
      border-radius 3px
      text-align center
      font-weight bold
      font-size 55px
      line-height 100px

    .tile-flag
      z-index 100  
      

    .tile-front
      background #ccc0b3

    .tile-flipped
      background #eee4da
      transform perspective(1000px) rotateY( 180deg )

    &.flipped
      transform perspective(0px) rotateY( 180deg )
