doctype html
html(ng-app='ngMineSweeper')
  head
    title MineSweeper
    link(rel='stylesheet' type='text/css' href='./css/main.css')
    meta(name='viewport' content='initial-scale=1,maximum-scale=1')
  body(ng-controller='GameCtrl')
    .wrapper
      .header
        h1 {{ title }}
        //- p {{ tiles }}
        //- p {{ status }}
      .game-container(onContextmenu='return false')
        .message-container(ng-if='gameStatus === "gameOver"') game over ...
        .tile-container
          .tile(ng-repeat='tile in tiles' tile='tile' gameStatus='gameStatus' changeGameStatus='changeGameStatus' checkClear='checkClear')
      .game-explanation
    script(type='text/javascript' src='./js/components.js')
    script(type='text/javascript' src='./js/main.js')
    script(type='text/javascript' src='./js/templates.js')

